<link rel="stylesheet" href="{{ 'section-featured-product.css' | asset_url }}" media="print" onload="this.media='all'">
<noscript>{{ 'section-featured-product.css' | asset_url | stylesheet_tag }}</noscript>
{{ 'section-featured-product.css' | asset_url | stylesheet_tag }}

<section class="featured-products container">
  {% render 'component-section-header' title: "FEATURED PRODUCTS"%}
  <div class="featured-products__inner">
    {% for block in section.blocks %}
    {% assign product = all_products[block.settings.product] %}
      <div class="featured-products__item">
        <div class="featured-products__item-image">
          {% render 'horizontal-line' %}
          {% render 'vertical-line' %}
          <img class="js-product-second-image" src="{{ product.media[0] | img_url: '400x400'}}" alt="">
          {% render 'horizontal-line' %}
          {% render 'vertical-line' %}        
        </div>
        <div class="featured-products__item-details">
          {% render 'horizontal-line' %}
          {% render 'vertical-line' %}    
          <h1>{{product.title}}</h1>
          {% render 'horizontal-line' %}
        </div>
      </div>
    {% endfor %}
  </div>
</section>

{% schema %}
{
  "name": "Featured Products",
  "tag": "section",
  "class": "spaced-section spaced-section--full-width",
  "blocks": [
    {
      "type": "product",
      "name": "Product",
      "limit": 6,
      "settings": [
        {
          "type": "product",
          "id": "product",
          "label": "Add a Product"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "Featured Products",
      "blocks": [
        {
          "type": "product"
        }
      ]
    }
  ]
}
{% endschema %}
