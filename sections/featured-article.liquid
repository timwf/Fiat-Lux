<link rel="stylesheet" href="{{ 'section-featured-article.css' | asset_url }}" media="print" onload="this.media='all'">
<noscript>{{ 'section-featured-article.css' | asset_url | stylesheet_tag }}</noscript>
{{ 'section-featured-articles' | asset_url | stylesheet_tag }}

<section  class="featured-article container">
  {% render 'component-section-header' title: "INSENTIVES"%}
  <div class="featured-article__inner">


      {% assign article = section.settings.blog %}
      <div class="featured-article__item">

        <img style="max-width: 100%;"  src="{{article.image.src | img_url: 'master'}}" alt="">
        <div class="featured-article__item-text">
          <h3>{{ article.title }}</h3>

          <p>{{ article.excerpt }}</p>
          <h4>READ MORE</h4>
        </div>

      </div>


  </div>
</section>

{% schema %}
{
  "name": "Featured Article",
  "tag": "section",
  "class": "spaced-section spaced-section--full-width",
  "settings":[
    {
      "type": "article",
      "id": "blog",
      "label": "Add an Article"
    }
  ],
  "presets": [
    {
      "name": "Featured Article"
    }
  ]
}
{% endschema %}